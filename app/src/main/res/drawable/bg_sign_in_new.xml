<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <corners
        android:radius="6dp" />

    <solid android:color="#0874d2" />
    <stroke android:width="0dp"
        android:color="#ffffff"/>

    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp"/>

    <size
        android:width="80dp"
        android:height="30dp"
        />

    <gradient
        android:startColor="#0060b8"
        android:centerColor="#0060b8"
        android:endColor="#0773d2"
        android:angle="90"/>
</shape>