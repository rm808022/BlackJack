<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <corners
        android:radius="2dp" />

    <solid android:color="#9932CC" />
    <stroke android:width="2dp"
        android:color="#ffffff"/>

    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp"/>

    <size
        android:width="50dp"
        android:height="50dp"
        />

    <gradient
        android:startColor="#993100"
        android:centerColor="#c26200"
        android:endColor="#993100"
        android:angle="0"/>
</shape>