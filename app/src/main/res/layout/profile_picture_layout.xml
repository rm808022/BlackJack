<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rlBodyProfilePicMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        android:background="@drawable/bg_center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/rlBodySelectAatar"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select avatar category"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#ffffff"/>
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/llsetPics"
            android:layout_below="@+id/rlBodySelectAatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvSetDafaultPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default avatar"
                android:textStyle="bold"
                android:background="@drawable/bg_select_language"
                android:textSize="15dp"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/tvTakePhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Take a photo"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_select_language"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/tvChoosePhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Choose a photo"
                android:background="@drawable/bg_select_language"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#ffffff"/>






        </LinearLayout>

        <LinearLayout
            android:id="@+id/llAvatars"
            android:layout_below="@+id/llsetPics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <HorizontalScrollView
                android:id="@+id/avatarBoy"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/avatar1"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/avatar1"/>

                    <ImageView
                        android:id="@+id/avatar2"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/avatar2"/>

                    <ImageView
                        android:id="@+id/avatar3"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/avatar3"/>

                    <ImageView
                        android:id="@+id/avatar4"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/avatar4"/>

                    <ImageView
                        android:id="@+id/avatar5"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/avatar5"/>

                    <ImageView
                        android:id="@+id/avatar6"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/avatar6"/>

                    <ImageView
                        android:id="@+id/avatar_w1"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/avatar_w1"/>

                    <ImageView
                        android:id="@+id/avatar_w2"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/avatar_w2"/>

                    <ImageView
                        android:id="@+id/avatar_w3"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/avatar_w3"/>

                    <ImageView
                        android:id="@+id/avatar_w4"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/avatar_w4"/>

                    <ImageView
                        android:id="@+id/avatar_w5"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/avatar_w5"/>

                    <ImageView
                        android:id="@+id/avatar_w6"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/avatar_w6"/>

                </LinearLayout>

            </HorizontalScrollView>





        </LinearLayout>


    </RelativeLayout>
    <ImageView
        android:id="@+id/imgVProfilePicCancel"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@+id/rlBodyProfilePicMain"
        android:layout_toRightOf="@+id/rlBodyProfilePicMain"
        android:layout_marginTop="-20dp"
        android:layout_marginLeft="-20dp"
        android:src="@drawable/error" />

</RelativeLayout>